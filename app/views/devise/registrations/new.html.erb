<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:id => "register-form-controll"}) do |f| %>
  <div class="pp-container">
    <div class="pp-holder">
    <i class="fa-solid fa-user-large"></i>
    </div>
    <div class="up-text-container">
      <p>Upload Picture</p>
    </div>
  </div>
  <div class="field">
    <%= f.text_field :name, autofocus: true,placeholder:"Name", autocomplete: "name",class:"register-form-controller" %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"Email",autocomplete: "email",class:"register-form-controller" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password",class:"register-form-controller" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Confirm Password",class:"register-form-controller" %>
  </div>
<% end %>

